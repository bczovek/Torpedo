<Window x:Class="Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Torpedo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>
        <Button Grid.Row="1" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="30" Width="300" Click="Play"></Button>
        <Button Grid.Row="2" Content="Scoreboard" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Width="300" Click="Scoreboard"></Button>
        <Button Grid.Row="3" Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Width="300" Click="Exit"></Button>
    </Grid>
</Window>
