<Window x:Class="Torpedo.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo.Views"
        mc:Ignorable="d"
        Title="GameWindow" Height="620" Width="1300">
	<StackPanel Background="Black">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Canvas Grid.Column="0" x:Name="canvas" Background="Lime" Height="555" Width="555" Margin="20" />
			<Canvas Grid.Column="1" x:Name="canvas2" Background="Lime" Height="555" Width="555" Margin="20" />
		</Grid>
	</StackPanel>
</Window>
